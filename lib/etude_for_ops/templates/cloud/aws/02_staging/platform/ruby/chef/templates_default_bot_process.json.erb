{
  "apps":[
    {
      "name"                  : "<%= @name %>",
      "cwd"                   : "<%= @cwd %>",
      "args"                  : <%= @args %>,
      "script"                : "<%= @script %>",
      "node_args"             : [],
      "log_date_format"       : "YYYY-MM-DDTHH:mm:ssZ",
      "error_file"            : "/srv/<%= @name %>/shared/log/hubot.err.log",
      "out_file"              : "/srv/<%= @name %>/shared/log/hubot.log",
      "pid_file"              : "/srv/<%= @name %>/shared/pids/hubot.pid",
      "exec_mode"             : "fork",
      "instances"             : 1,
      "min_uptime"            : "200s",
      "max_restarts"          : 0,
      "max_memory_restart"    : "150M",
      "watch"                 : true,
      "ignore_watch"          : ["[\\/\\\\]\\./", "node_modules"],
      "merge_logs"            : true,
      "exec_interpreter"      : "bash",
      "autorestart"           : true,
      "vizion"                : false,
      "env": {
        "NODE_ENV"                    : "<%= @node_env %>",
        "HUBOT_SLACK_TOKEN"           : "<%= @hubot_slack_tocken %>",
        "PORT"                        : "<%= @port %>",
        "ADAPTER"                     : "<%= @adapter %>",
        "HUBOT_AWS_ACCESS_KEY_ID"     : "<%= @hubot_aws_access_key_id %>",
        "HUBOT_AWS_SECRET_ACCESS_KEY" : "<%= @hubot_aws_secret_access_key %>",
        "HUBOT_JENKINS_URL"           : "<%= @hubot_jenkins_url %>",
        "HUBOT_JENKINS_AUTH"          : "<%= @hubot_jenkins_auth %>",
        "HUBOT_JIRA_URL"              : "<%= @hubot_jira_url %>",
        "HUBOT_JIRA_USER"             : "<%= @hubot_jira_user %>",
        "HUBOT_JIRA_PASSWORD"         : "<%= @hubot_jira_password %>",
        "MATTERMOST_HOST"             : "<%= @mattermost_host %>",
        "MATTERMOST_GROUP"            : "<%= @mattermost_group %>",
        "MATTERMOST_USER"             : "<%= @mattermost_user %>",
        "MATTERMOST_PASSWORD"         : "<%= @mattermost_password %>",
        "MATTERMOST_USE_TLS"          : "<%= @mattermost_use_tls %>",
        "DOCOMO_API_KEY"              : "<%= @docomo_api_key %>",
        "HUBOT_GITHUB_ORG"            : "<%= @hubot_github_org %>",
        "HUBOT_GITHUB_REPO"           : "<%= @hubot_github_repo %>",
        "HUBOT_GITHUB_TOKEN"          : "<%= @hubot_github_token %>",
        "HUBOT_GITHUB_USER"           : "<%= @hubot_github_user %>",
        "HUBOT_FORECAST_API_KEY"      : "<%= @hubot_forecast_api_key %>"
      }
    }
  ]
}
