#!/bin/bash

set -e
VM_BOX=dev-env.box
BOX_NAME=etude_for_rails

#export PACKER_LOG=1
rm ./$VM_BOX || true
#エラー時はvagrant plugin install vagrant-exec
vagrant exec sudo ln -s -f /dev/null /etc/udev/rules.d/70-persistent-net.rules
vagrant package -o ./$VM_BOX
# vagrant box remove dev-env --all || true
vagrant box add $BOX_NAME metadata.json
