user = node['user']
group = node['group']
app = node['app_name_short']

template "puma" do
  path "/etc/systemd/system/puma.service"
  source "puma.service.erb"
  owner "<%= params[:user] %>"
  group "<%= params[:group] %>"
  mode 0751

  variables(
      :user     => user,
      :group    => group,
      :app      => app
  )
end

template "active_job" do
  path "/etc/systemd/system/active_job.service"
  source "active_job.service.erb"
  owner "<%= params[:user] %>"
  group "<%= params[:group] %>"
  mode 0751

  variables(
      :user     => user,
      :group    => group,
      :app      => app
  )
end

service "puma" do
  supports :status => true, :restrart => true, :reload => true
  action [ :enable, :start ]
end

service "active_job" do
  supports :status => true, :restrart => true, :reload => true
  action [ :enable, :start ]
end
