AWSTemplateFormatVersion: 2010-09-09
Description: >-
  <%= params[:application_name] %> IAM User
Parameters:
  Group:
    NoEcho: 'true'
    Type: String
    Description: New account user group
  AdminGroup:
    NoEcho: 'true'
    Type: String
    Description: New account user admin group
  User:
    NoEcho: 'true'
    Type: String
    Description: New account user
  Password:
    NoEcho: 'true'
    Type: String
    Description: New account password
    MinLength: '1'
    MaxLength: '41'
    ConstraintDescription: the password must be between 1 and 41 characters
Resources:
  APPUser:
    Type: 'AWS::IAM::User'
    Properties:
      UserName: !Join [ "@", [ !Ref User, !Ref "AWS::Region" ] ]
      LoginProfile:
        Password: !Ref Password
  APPUserGroup:
    Type: 'AWS::IAM::Group'
    Properties:
      GroupName: !Join [ "@", [ !Ref Group, !Ref "AWS::Region" ] ]
  APPAdminGroup:
    Type: 'AWS::IAM::Group'
    Properties:
      GroupName: !Join [ "@", [ !Ref AdminGroup, !Ref "AWS::Region" ] ]
  Users:
    Type: 'AWS::IAM::UserToGroupAddition'
    Properties:
      GroupName: !Ref APPUserGroup
      Users:
        - !Ref APPUser
  Admins:
    Type: 'AWS::IAM::UserToGroupAddition'
    Properties:
      GroupName: !Ref APPAdminGroup
      Users:
        - !Ref APPUser
  APPUserPolicies:
    Type: 'AWS::IAM::Policy'
    Properties:
      PolicyName: APPUsers
      PolicyDocument:
        Statement:
          - Effect: Allow
            Action:
              - 'cloudformation:Describe*'
              - 'cloudformation:List*'
              - 'cloudformation:Get*'
              - 'codecommit:BatchGet*'
              - 'codecommit:Get*'
              - 'codecommit:List*'
              - 'codecommit:Create*'
              - 'codecommit:DeleteBranch'
              - 'codecommit:Describe*'
              - 'codecommit:Put*'
              - 'codecommit:Post*'
              - 'codecommit:Merge*'
              - 'codecommit:Test*'
              - 'codecommit:Update*'
              - 'codecommit:GitPull'
              - 'codecommit:GitPush'
            Resource: '*'
      Groups:
        - !Ref APPUserGroup
  APPAdminPolicies:
    Type: 'AWS::IAM::Policy'
    Properties:
      PolicyName: APPAdmins
      PolicyDocument:
        Statement:
          - Effect: Allow
            Action:
              - 'cloudformation:*'
              - 'EC2:*'
              - 'IAM:*'
              - 'S3:*'
              - 'codecommit:*'
              - 'RDS:*'
              - 'elasticloadbalancing:*'
              - 'OpsWorks:*'
              - 'lambda:*'
              - 'elasticbeanstalk:*'
              - 'autoscaling:*'
              - 'cloudwatch:*'
              - 'ecr:*'
              - 'codebuild:*'
              - 'codedeploy:*'
              - 'codepipeline:*'
              - 'kms:*'
            Resource: '*'
      Groups:
        - !Ref APPAdminGroup
  APPKeys:
    Type: 'AWS::IAM::AccessKey'
    Properties:
      UserName: !Ref APPUser
Outputs:
  AccessKey:
    Value: !Ref APPKeys
    Description: AWSAccessKeyId of new user
  SecretKey:
    Value: !GetAtt
      - APPKeys
      - SecretAccessKey
    Description: AWSSecretKey of new user
