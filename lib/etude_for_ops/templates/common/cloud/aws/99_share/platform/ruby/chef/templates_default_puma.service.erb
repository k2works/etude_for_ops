[Unit]
Description=puma

[Service]
Environment=RAILS_ENV=development
WorkingDirectory=/var/app/current
ExecStart=/home/vagrant/.rbenv/shims/bundle exec puma -C /var/app/shared/config/puma.rb
ExecStop=kill -s SIGTERM `cat /srv/app/shared/pids/puma.pid`
Restart = always
Type = simple
User=<%= @user %>
Group=<%= @group %>

[Install]
WantedBy = multi-user.target
