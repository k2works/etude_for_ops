#!/usr/bin/env bash

STACKID=$<%= params[:opsw_stack_id] %>
LAYER_ID=$<%= params[:opsw_app_layer_id] %>

echo "**********************************"
echo STACKID:$STACKID
echo LAYER_ID:$LAYER_ID
echo "**********************************"

aws opsworks create-instance  \
             --region us-east-1  \
             --stack-id $STACKID \
             --layer-ids $LAYER_ID \
             --instance-type t2.medium --os "Amazon Linux"
