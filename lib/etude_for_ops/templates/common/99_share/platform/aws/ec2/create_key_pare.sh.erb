#!/usr/bin/env bash
KEY_NAME=$<%= params[:ssh_key_name] %>
SSH_KEY=$<%= params[:ssh_key] %>

echo "**********************************"
echo KEY_NAME:$<%= params[:ssh_key_name] %>
echo SSH_KEY:$<%= params[:ssh_key] %>
echo "**********************************"

aws ec2 create-key-pair --key-name $KEY_NAME --query 'KeyMaterial' --output text > $SSH_KEY
cp $SSH_KEY  ~/.ssh/
chmod 0400 ~/.ssh/$SSH_KEY