#!/usr/bin/env bash
SG_ID=$<%= params[:ec2_sg_id] %>

echo "**********************************"
echo SG_ID:$SG_ID
echo "**********************************"

aws ec2 authorize-security-group-ingress --group-id $SG_ID --cidr 0.0.0.0/0 --port 22 --protocol tcp
aws ec2 authorize-security-group-ingress --group-id $SG_ID --cidr 0.0.0.0/0 --port 80 --protocol tcp
aws ec2 authorize-security-group-ingress --group-id $SG_ID --cidr 0.0.0.0/0 --port 3306 --protocol tcp