case node["platform"]
  when "debian", "ubuntu"
    template "puma" do
      path "/etc/systemd/system/puma.service"
      source "puma.service.erb"
      owner "<%= params[:user] %>"
      group "<%= params[:group] %>"
      mode 0751

      variables(
          :user     => "<%= params[:user] %>",
          :group    => "<%= params[:group] %>"
      )
    end

    template "active_job" do
      path "/etc/systemd/system/active_job.service"
      source "active_job.service.erb"
      owner "<%= params[:user] %>"
      group "<%= params[:group] %>"
      mode 0751

      variables(
          :user     => "<%= params[:user] %>",
          :group    => "<%= params[:group] %>"
      )
    end

  when "redhat", "centos", "fedora"
    if platform_family?('rhel') && node['platform_version'].to_i == 7 then
      template "puma" do
        path "/etc/systemd/system/puma.service"
        source "puma.service.erb"
        owner "<%= params[:user] %>"
        group "<%= params[:group] %>"
        mode 0751

        variables(
            :user     => "<%= params[:user] %>",
            :group    => "<%= params[:group] %>"
        )
      end
    elsif platform_family?('rhel') && node['platform_version'].to_i == 6 then
      template "puma" do
        path "/etc/init.d/puma"
        source "puma.erb"
        owner "<%= params[:user] %>"
        group "<%= params[:group] %>"
        mode 0751

        variables(
            :user     => "<%= params[:user] %>",
            :group    => "<%= params[:group] %>"
        )
      end
    end
  when "amazon"
    template "puma" do
      path "/etc/init.d/puma"
      source "puma.erb"
      owner "<%= params[:aws_user] %>"
      group "<%= params[:aws_group] %>"
      mode 0751

      variables(
          :user     => "<%= params[:aws_user] %>"
      )
    end

    template "active_job" do
      path "/etc/init.d/active_job"
      source "active_job.erb"
      owner "<%= params[:aws_user] %>"
      group "<%= params[:aws_group] %>"
      mode 0751

      variables(
          :user     => "<%= params[:aws_user] %>"
      )
    end    
end